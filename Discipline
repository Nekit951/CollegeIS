using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace CollegeIS
{
    public partial class DisciplineI11: Form
    {
        private string connectionString = "Data Source=WIN-C4UM3B4G5HP;Initial Catalog=College;Integrated Security=True";
        public DisciplineI11()
        {
            InitializeComponent();
            LoadSemestersData();
        }

        private void LoadSemestersData()
        {
            LoadSemesterData(tabPage1, dataGridView1, 1);
            LoadSemesterData(tabPage2, dataGridView2, 2);
        }

        private void LoadSemesterData(TabPage tabPage, DataGridView dgv, int semester)
        {
            string query = $"SELECT * FROM dbo.ДисциплиныП11 WHERE Семестр = {semester}";

            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                SqlDataAdapter adapter = new SqlDataAdapter(query, connection);
                DataTable dt = new DataTable();
                adapter.Fill(dt);
                dgv.DataSource = dt;
            }
        }
    }
}
